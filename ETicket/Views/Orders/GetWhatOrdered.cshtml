@model List<Order>
@{
    ViewData["Title"] = "All Orders";
}
<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>List of all your Orders</h4>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>Order Id</th>
                    <th>Items</th>
                    <th>Total</th>
                    <th>User</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td class="align-middle">@item.Id</td>
                        <td class="align-middle">
                            <ul style="list-style-type:none">
                                @foreach(var i in item.OrderItems )
                                {
                                    <li>
                                        <div class="alert alert-info" role="alert">
                                            <span class="badge bg-success">@i.Amount</span> [@i.Price.ToString("c")]- @i.Movie.Name
                                        </div>
                                    </li>
                                }
                            </ul>
                        </td>
                        <td class="align-middle">@item.OrderItems.Select(m=> m.Movie.Price*m.Amount).Sum().ToString("c")</td>
                        <td class="align-middle">@item.UserId</td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>