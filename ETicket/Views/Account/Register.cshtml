@using ETicket.Data.ViewModel;
@model RegisterVM;
@{
    ViewData["Title"] = "Sign up for a new Account";
}
<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Sign up for a new Account</h4>
        </p>
        @if(TempData["Error"]!= null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry! @TempData["Error"]</b></span>
                </div>
        }
        <div class="row">
            <div class="col-mdd-8 offset-2">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label app-for="FullName" class="control-label">Enter your Full Name</label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label app-for="EmailAddress" class="control-label">Enter your Email</label>
                        <input asp-for="EmailAddress" class="form-control" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label app-for="Password" class="control-label">Enter your Password</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label app-for="ConfirmPassword" class="control-label">Confirm your Password</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input class="btn btn-outline-success float-right" type="submit" value="Sign Up" />
                        <a class="btn btn-outline-secondary asp-controller="Movie" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
