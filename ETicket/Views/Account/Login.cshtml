@using ETicket.Data.ViewModel;
@model LoginVM;
@{
    ViewData["Title"] = "Login to your Account";
}
<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Log in to your Account</h4>
        </p>
        <div class="row">
            <div class="col-mdd-8 offset-2">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label app-for="EmailAddress" class="control-label">Enter your Email</label>
                        <input asp-for="EmailAddress" class="form-control" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label app-for="Password" class="control-label">Enter your Password</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-outline-success float-right" type="submit" value="Log in" />
                        <a class="btn btn-outline-secondary asp-controller="Movie" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
